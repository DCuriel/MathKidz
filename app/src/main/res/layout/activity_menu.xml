<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu">

    <Button
        android:id="@+id/AddHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="154dp"
        android:layout_marginTop="81dp"
        android:layout_marginEnd="151dp"
        android:layout_marginBottom="99dp"
        android:text="Addition"
        app:layout_constraintBottom_toTopOf="@+id/SubHome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/SubHome"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="136dp"
        android:layout_marginTop="99dp"
        android:layout_marginEnd="135dp"
        android:text="Subtraction"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AddHome" />

    <Button
        android:id="@+id/MultHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="126dp"
        android:layout_marginTop="74dp"
        android:layout_marginEnd="125dp"
        android:layout_marginBottom="124dp"
        android:text="Multiplication"
        app:layout_constraintBottom_toTopOf="@+id/DivHome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SubHome" />

    <Button
        android:id="@+id/DivHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="158dp"
        android:layout_marginTop="124dp"
        android:layout_marginEnd="153dp"
        android:text="Division"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MultHome" />
</androidx.constraintlayout.widget.ConstraintLayout>